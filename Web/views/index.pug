extends layout
block content
    link(rel='stylesheet', href='/stylesheets/signin.css')
    div.container
        form.form-signin(method='POST' action='/api/doctor/login')
            h2.form-signin-heading Welcome to #{title}
            input(type="text", name='username' placeholder='Username', required=true, autofocus=true)#inputUsername.form-control
            input(type="password", name='password', placeholder='Password', required=true)#inputPassword.form-control
            div.checkbox
                label
                    input(type="checkbox" value="remember-me")
                    | Remember me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign In
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Register